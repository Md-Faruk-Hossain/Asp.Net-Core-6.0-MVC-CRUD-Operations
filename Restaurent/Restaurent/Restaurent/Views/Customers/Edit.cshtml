@model Restaurent.Models.ViewModel.CustomerVM

@{
	ViewData["Title"] = "Edit";
}
<form asp-action="Edit" enctype="multipart/form-data" method="post">
	<div class="row">
		<div class="col-6">
			<input type="hidden" asp-for="CustomerId" />
			<input type="hidden" asp-for="Picture" />
			<h4 class="text-center bg-success">Customer Edit </h4>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="CustomerName" class="control-label"></label>
				<input asp-for="CustomerName" class="form-control" />
				<span asp-validation-for="CustomerName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CustomerPhone" class="control-label"></label>
				<input asp-for="CustomerPhone" class="form-control" />
				<span asp-validation-for="CustomerPhone" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Address" class="control-label"></label>
				<input asp-for="Address" class="form-control" />
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PicturFile" class="control-label"></label>
				<input asp-for="PicturFile" class="form-control" type="file" />
				<span asp-validation-for="PicturFile" class="text-danger"></span>
			</div>
			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="IsOrder" /> @Html.DisplayNameFor(model => model.IsOrder)
				</label>
			</div>
		</div>
		<div class="col-6">
			<h4 class="text-center bg-secondary">Food Edit</h4>
			<div class="d-flex justify-content-end">
				<a class="btn btn-primary text-white" id="btnPlus">Add</a>
			</div>
			<div id="FoodItemContainer">
				@foreach (var foodItem in Model.FoodItemList)
				{
					<script>
						LoadFoodItem(@foodItem);
					</script>
				}				
			</div>
		</div>
	</div>
	<div class="form-group">
		<input type="submit" value="Update" class="btn btn-outline-success btn-sm shadow " />
	</div>
</form>
<hr/>
<div>
	<a asp-action="Index" class="btn btn-outline-primary shadow">Back To list</a>
</div>

