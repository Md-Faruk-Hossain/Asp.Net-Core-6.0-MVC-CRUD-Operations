@model IEnumerable<Restaurent.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center bg-success text-white ">Employee List</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary shadow  text-black">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead class="bg-success  text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Picture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>              
                    <a class="btn btn-outline-success btn-sm shadow" asp-action="Edit" asp-controller="Employees" asp-route-id="@item.EmployeeId">Edit</a>
                    <a class="btn btn-outline-warning btn-sm shadow" asp-action="Details" asp-controller="Employees" asp-route-id="@item.EmployeeId">Details</a>
                    <a class="btn btn-outline-danger btn-sm shadow" asp-action="Delete" asp-controller="Employees" asp-route-id="@item.EmployeeId">Delete</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
