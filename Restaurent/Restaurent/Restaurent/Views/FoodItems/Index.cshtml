@model IEnumerable<Restaurent.Models.FoodItem>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">FoodItem List</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary shadow  text-black">Create New</a>
</p>
<div class="row">
    <div class="col ">
        <table class="table table-bordered table-sm border-dark ">
            <thead class="bg-success text-white ">
                <tr>
                   
                    <th>@Html.DisplayNameFor(x=>x.FoodName)</th>
                    <th>@Html.DisplayNameFor(x=>x.EntryDate)</th>
                    <th>@Html.DisplayNameFor(x=>x.Picture)</th>
                    <th>@Html.DisplayNameFor(x=>x.Quantity)</th>
                    <th>@Html.DisplayNameFor(x=>x.Price)</th>
                    <th>Action</th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                     
                        <td>@Html.DisplayFor(x=>item.FoodName)</td>
                        <td>@Html.DisplayFor(x=>item.EntryDate)</td>
                        <td><img src="@item.Picture" width="60" class="mr-5" /></td>
                        <td>@Html.DisplayFor(x=>item.Quantity)</td>
                        <td>@Html.DisplayFor(x=>item.Price)</td>
                        
                        <td>
                            <a class="btn btn-outline-success btn-sm shadow" asp-controller="FoodItems" asp-action="Edit" asp-route-id="@item.FoodItemId">Edit</a>
                            <a class="btn btn-outline-danger btn-sm shadow" asp-controller="FoodItems" asp-action="Delete" asp-route-id="@item.FoodItemId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
